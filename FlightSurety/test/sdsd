var Test = require('../config/testConfig.js');
var BigNumber = require('bignumber.js');

contract('Flight Surety Tests', async (accounts) => {
  var config;

  beforeEach('setup contract', async () => {
    config = await Test.Config(accounts);
    let isAuthorised = await config.flightSuretyData.authorizeCaller(config.flightSuretyApp.address, { from: accounts[0] });
  });

  it('should log the test addresses', async () => {
    // Move the web3.eth.getBalance code inside the test case
    web3.eth.getBalance(accounts[0], (error, balance) => {
      if (error) {
        console.error(error);
      } else {
        console.log(`Account ${accounts[0]} has a balance of ${web3.utils.fromWei(balance, "ether")} Ether`);
      }
    });

    // Log the test addresses
    console.log(config.testAddresses);
  });

  // Rest of your tests...
});